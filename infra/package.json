{
  "name": "ts-infra",
  "version": "0.1.0",
  "bin": {
    "infra": "index.ts"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:synth:dev1": "cdk synth --context config-env=local --all",
    "cdk:deploy:dev1:ci": "cdk deploy --require-approval never --context config-env=dev1 --all",
    "cdk:deploy:qa1:ci": "cdk deploy --require-approval never --context config-env=qa1 --all",
    "cdk:deploy:sbx:ci": "cdk deploy --require-approval never --context config-env=sbx --all",
    "cdk:deploy:prod:ci": "cdk deploy --require-approval never --context config-env=prod --all"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "22.13.9",
    "aws-cdk": "2.1003.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2"
  },
  "dependencies": {
    "@sage/flux-cdk-lib": "^4.0.0",
    "aws-cdk-lib": "2.189.1",
    "constructs": "^10.0.0",
    "zod": "^3.24.2"
  }
}
