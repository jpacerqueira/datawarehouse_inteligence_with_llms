{
  "tables": {
    "payments": {
      "description": "Contains all payment transactions with inflow and outflow amounts",
      "columns": {
        "transaction_id": "Unique identifier for each transaction",
        "transaction_date": "Date when the transaction occurred",
        "inflow": "Money coming in (positive cash flow)",
        "outflow": "Money going out (negative cash flow)",
        "category": "Category of the transaction",
        "description": "Description of the transaction"
      }
    },
    "bank_payments": {
      "description": "Bank-specific payment information",
      "columns": {
        "payment_id": "Unique identifier for bank payments",
        "bank_name": "Name of the bank",
        "account_number": "Bank account number",
        "transaction_date": "Date of the bank transaction",
        "amount": "Transaction amount"
      }
    },
    "debtor": {
      "description": "Information about debtors",
      "columns": {
        "debtor_id": "Unique identifier for debtors",
        "name": "Name of the debtor",
        "contact_info": "Contact information for the debtor",
        "outstanding_amount": "Total outstanding amount"
      }
    }
  }
}
